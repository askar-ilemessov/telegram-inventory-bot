# Production Environment Configuration
# Copy this to .env.docker on your production server

# Django Settings
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_USE_openssl_rand_base64_32
DEBUG=False
ALLOWED_HOSTS=your-domain.com,your-server-ip,localhost

# Database (PostgreSQL in Docker)
DB_NAME=inventory_pos_db
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_ENABLED=False
GOOGLE_SHEET_ID=your-google-sheet-id-here
GOOGLE_SERVICE_ACCOUNT_FILE=service_account.json

# Security
# Generate SECRET_KEY with: openssl rand -base64 32
# Generate DB_PASSWORD with: openssl rand -base64 16

